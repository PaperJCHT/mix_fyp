<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--RatingBar颜色-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darker_gray</item>
        <item name="colorControlActivated">@color/text_FF2F6BF4</item>
    </style>
    <!-- 弹入、弹出效果 -->
    <style name="dialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_dismiss</item>
    </style>
    <!-- 更多设置Dialog -->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="chat_content_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!-- 选择文件dialog progress -->
    <style name="qZonePublishProgressStyle">
        <item name="android:width">30.0dip</item>
        <item name="android:height">30.0dip</item>
    </style>
    <!-- 自定义 ImageView 圆角图 ImageRoundedCornerView -->
    <declare-styleable name="RoundedCornersImage">
        <attr name="corner_radius" format="integer" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
</resources>
