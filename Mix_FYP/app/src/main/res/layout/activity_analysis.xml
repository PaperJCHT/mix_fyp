<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F6F6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@mipmap/common_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <FrameLayout
            android:id="@+id/fl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/analysis_title"
                android:textColor="@color/text_FF333333"
                android:textSize="20sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingTop="15dp"
            android:paddingRight="24dp"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_border_blue"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/btn_cancle"
                android:textColor="@color/btn_bg"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_common"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_blue"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/btn_common"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom"
            android:layout_below="@id/fl_top"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_analysis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="根據分析，看來要上門維修"
                android:textColor="@color/text_FF666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="請登記時間預約"
                android:textColor="@color/text_FF666666"
                android:textSize="14sp" />


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>